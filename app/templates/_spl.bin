#!/bin/sh

if [ "$1" == "test" ]; then
    echo "- Runnig tests\n\n"
    node_modules/karma/bin/karma start
fi

if [ "$1" == "doc" ]; then
    echo "- Runnig tests\n\n"
    node_modules/jsdoc/jsdoc src/*.js -p
fi

if [ "$1" == "install" ]; then
    rm -rf bower_components
    rm -rf node_modules

    echo "- Installning node packages\n"
    npm install

    echo "- Installing bower components\n"
    bower install
fi